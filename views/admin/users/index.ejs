<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Usuarios</h2>
    <a href="/admin/users/create" class="btn btn-success">Criar novo usuario</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>

                <tr>
                    <th><%= user.id    %></th>
                    <th><%= user.email %></th>
                    <th>
                        <a href="/admin/users/edit/" class="btn btn-warning">Editar</a>
                        <form method="POST" action="/users/delete" style="display: inline;" onsubmit="confirmDelect(event, this)">
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th> 
                </tr>

            <% }) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs') %>